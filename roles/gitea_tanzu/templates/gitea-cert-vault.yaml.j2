apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: gitea-tls
  namespace: gitea
spec:
  secretName: gitea-tls
  issuerRef:
    kind: ClusterIssuer
    name: vault-cluster-issuer
  commonName: gitea{{ suffix }}.local.lan
  dnsNames:
  - gitea{{ suffix }}.local.lan
  duration: 8760h
  renewBefore: 4380h