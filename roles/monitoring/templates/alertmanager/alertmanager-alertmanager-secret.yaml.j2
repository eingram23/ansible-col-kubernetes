apiVersion: v1
kind: Secret
type: Opaque
metadata:
  name: alertmanager-alertmanager
  namespace: monitoring
stringData:
  alertmanager.yaml: |-
    global:
      resolve_timeout: 5m
      smtp_from: alertmanager@ycdisp.net
      smtp_smarthost: smtp.gmail.com:587
      smtp_auth_username: edward.ingram@ycdisp.com
      smtp_auth_identity: edward.ingram@ycdisp.com
      smtp_auth_password: "{{ lookup('hashi_vault', 'secret=secret/google/smtp:password') }}"
    route:
      group_wait: 30s
      group_interval: 5m
      repeat_interval: 4h
      group_by: ['alertname','job']
      receiver: null
      routes:
        - matchers:
            - severity="critical"
              receiver: email-alert
    inhibit_rules:
      - equal: [alertname]
        source_matchers: [severity="critical"]
        target_matchers: [severity="warning"]
    receivers:
      - name: null
      - name: email-alert
        email_configs:
          - to: edward.ingram23@gmail.com 