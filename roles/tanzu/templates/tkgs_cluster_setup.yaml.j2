apiVersion: run.tanzu.vmware.com/v1alpha2
kind: TanzuKubernetesCluster
metadata:
  name: {{ clustername }}
  namespace: homelab
spec:
  topology:
    controlPlane:
      replicas: {{ control_replicas }}
      vmClass: {{ vmclass }}
      storageClass: {{ storageclass }}
      tkr:  
        reference:
          name: {{ tkg_ver }}
    nodePools:
    - name: worker-nodepool-a1
      replicas: {{ worker_replicas }}
      vmClass: {{ vmclass }}
      storageClass: {{ storageclass }}
      tkr:  
        reference:
          name: {{ tkg_ver }}
  settings:
    network:
      pods:
        cidrBlocks: ["192.0.5.0/16"]